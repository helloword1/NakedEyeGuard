<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include android:id="@+id/rl_FirstStateBar" layout="@layout/base_fragment_toobar"/>
    <ImageView
        android:id="@+id/iv_BingdingInfo"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/about"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/iv_BingdingInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_CompleteBinding">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                />
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="1>微信扫一扫，关注‘裸眼卫士’服务号"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_SceneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"
                />
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="1>微信扫一扫，关注‘裸眼卫士’服务号"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_SceneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_margin="20dp"
        android:id="@+id/bt_CompleteBinding"
        android:text="注册完成"
        android:textSize="18sp"
        android:textColor="@drawable/text_color"
        android:layout_alignParentBottom="true"
        android:background="@drawable/heading_process_fragment_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>