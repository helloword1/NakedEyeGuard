<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include android:id="@+id/rl_WifiPWDStateBar" layout="@layout/base_toobar"/>

    <EditText
        android:id="@+id/et_WifiPWDInput"
        android:hint="  输入密码"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorCusTrans"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rl_WifiPWDStateBar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorCusNum"
        android:layout_below="@+id/et_WifiPWDInput"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/bt_WifiPwdCancle"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@drawable/text_cancle_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cancle"/>
        <Button
            android:id="@+id/bt_WifiPwdSure"
            android:enabled="false"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@drawable/text_save_btn"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_3_disable"/>
    </LinearLayout>
</RelativeLayout>