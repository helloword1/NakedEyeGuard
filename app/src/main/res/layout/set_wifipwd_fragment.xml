<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/et_WifiPWDInput"
        android:hint="  输入密码"
        android:textSize="24sp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/colorCusTrans"
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="100px" />
    <View
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/colorCusNum"
        android:layout_below="@+id/et_WifiPWDInput"
        android:layout_width="match_parent"
        android:layout_height="4px" />
    <LinearLayout
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="600px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <Button
            android:id="@+id/bt_WifiPwdCancle"
            android:text="取消"
            android:textSize="24sp"
            android:textColor="@drawable/text_cancle_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            android:background="@drawable/btn_cancle"/>
        <Button
            android:id="@+id/bt_WifiPwdSure"
            android:enabled="false"
            android:text="确定"
            android:textSize="24sp"
            android:textColor="@drawable/text_save_btn"
            android:layout_marginLeft="40px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            android:background="@drawable/btn_3_disable"/>
    </LinearLayout>
</RelativeLayout>