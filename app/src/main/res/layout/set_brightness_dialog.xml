<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_DialogVoiceText"
            android:text="亮度"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_DialogVoiceText"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorBlack"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:background="@drawable/icon_light_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/bsb_SetBrightness"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            app:bsb_max="255"
            app:bsb_min="0"
            app:bsb_second_track_color="@color/colorCusNum"
            app:bsb_track_color="@color/colorCusGray"
            app:bsb_track_size="4dp"/>
        <ImageView
            android:background="@drawable/icon_light_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/bt_SetBrightnessCancle"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="@drawable/text_cancle_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cancle"/>
        <Button
            android:id="@+id/bt_SetBrightnessSave"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@drawable/text_save_btn"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_save"/>
    </LinearLayout>
</LinearLayout>