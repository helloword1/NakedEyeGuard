<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_DialogVoiceText"
            android:text="亮度"
            android:textSize="24sp"
            android:layout_marginTop="20px"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_DialogVoiceText"
            android:layout_marginTop="30px"
            android:layout_width="match_parent"
            android:layout_height="1.6px"
            android:background="@color/colorBlack"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="120px"
        android:paddingBottom="120px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:background="@drawable/icon_light_min"
            android:id="@+id/light_low"
            android:layout_width="50px"
            android:layout_height="50px" />
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/bsb_SetBrightness"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:bsb_max="150"
            app:bsb_min="0"
            app:bsb_progress="80"
            app:bsb_second_track_color="@color/colorCusNum"
            app:bsb_track_color="@color/colorCusGray"
            app:bsb_track_size="8px"/>
        <ImageButton
            android:id="@+id/light_high"
            android:background="@drawable/icon_light_max"
            android:layout_width="50px"
            android:layout_height="50px" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10px"
        android:layout_height="90px">
        <Button
            android:id="@+id/bt_SetBrightnessCancle"
            android:text="取消"
            android:textSize="24sp"
            android:textColor="@drawable/text_cancle_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90px"
            android:background="@drawable/btn_cancle"/>
        <Button
            android:id="@+id/bt_SetBrightnessSave"
            android:text="保存"
            android:textSize="24sp"
            android:textColor="@drawable/text_save_btn"
            android:layout_marginLeft="40px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90px"
            android:background="@drawable/btn_save"/>
    </LinearLayout>
</LinearLayout>