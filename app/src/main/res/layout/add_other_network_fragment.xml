<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_AddNewLayout1"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_NewWifiNameInput"
            android:textSize="24sp"
            android:hint="  输入WiFI名称"
            android:background="@color/colorCusTrans"
            android:layout_width="match_parent"
            android:layout_height="100px" />
        <ImageButton
            android:id="@+id/ib_AddWifiNameDel"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/colorCusNum"
            android:layout_below="@+id/et_NewWifiNameInput"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:id="@+id/rl_AddNewPWD"
        android:layout_below="@+id/rl_AddNewLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="24sp"
            android:id="@+id/et_NewWifiPWDInput"
            android:hint="  输入密码"
            android:background="@color/colorCusTrans"
            android:layout_width="match_parent"
            android:layout_height="100px" />
        <ImageButton


            android:visibility="gone"
            android:id="@+id/ib_AddWifiPWDDel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/colorCusNum"
            android:layout_below="@+id/et_NewWifiPWDInput"
            android:layout_width="match_parent"
            android:layout_height="4px" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_below="@+id/rl_AddNewPWD"
        android:layout_marginTop="120px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <Button
            android:id="@+id/bt_AddWifiSure"
            android:enabled="false"
            android:text="连接"
            android:textSize="24sp"
            android:textColor="@drawable/text_save_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            android:background="@drawable/btn_1_disable"
           />
    </LinearLayout>
</RelativeLayout>