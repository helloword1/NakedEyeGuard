<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <ImageView

        android:layout_marginLeft="20dp"
        android:id="@+id/iv_WifiConnectStateIcon"
        android:background="@drawable/selected"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_WifiName"
        android:text="GK24"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_WifiConnectStateIcon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_WifiIsLock"
        android:background="@drawable/icon_lock"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_WifiConnectIcon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="20dp"
        android:id="@+id/iv_WifiConnectIcon"
        android:background="@drawable/icon_wifi"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorCusGray"/>
</RelativeLayout>