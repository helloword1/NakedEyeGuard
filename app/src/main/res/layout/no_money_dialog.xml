<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_NoMoney"
        android:layout_marginTop="40px"
        android:src="@drawable/popup_nomoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_NoMoney"
        android:text="理疗已消费完，请到微信公众号购买后继续理疗！"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:lines="2"
        android:layout_below="@+id/iv_NoMoney"
        android:layout_centerHorizontal="true"
        android:layout_width="500px"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_NoMoneyKonw"
        android:layout_marginBottom="20px"
        android:text="知道了"
        android:textSize="24sp"
        android:background="@drawable/heading_process_fragment_sure"
        android:textColor="@drawable/text_save_btn"
        android:layout_marginTop="60px"
        android:layout_below="@+id/tv_NoMoney"
        android:layout_width="500px"
        android:layout_centerHorizontal="true"
        android:layout_height="90px" />
</RelativeLayout>