<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/rl_WifiStateBar" layout="@layout/base_fragment_toobar"/>
    <ListView
        android:layout_above="@+id/bt_WifiScan"
        android:id="@+id/lv_SetWifiList"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_below="@+id/rl_WifiStateBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <Button
        android:id="@+id/bt_WifiScan"
        android:layout_margin="10dp"
        android:text="扫描"
        android:textSize="18sp"
        android:textColor="@drawable/text_color"
        android:background="@drawable/heading_process_fragment_sure"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>