<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245px">
    <RelativeLayout
        android:id="@+id/rl_WifiListGroup2"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="45px">

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.8px"
            android:background="@color/colorCusGray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_WifiSelectOther"
        android:clickable="true"
        android:background="@drawable/setting_relativelayout_bg"
        android:layout_below="@+id/rl_WifiListGroup2"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginBottom="80px">
        <TextView
            android:text="选取其他网络"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/list_go"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="40px"
            android:layout_height="40px" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/colorCusGray"/>
    </RelativeLayout>
</RelativeLayout>